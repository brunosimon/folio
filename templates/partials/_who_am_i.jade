include ../mixins/_arrows_title.jade
include ../mixins/_svg.jade

section.who-am-i
    +arrows_title("Who am I")
    .content
        .description
            p.b-unveil
                | French developer living in Paris.
                br
                | Lead developer at <a target="_blank" href="http://immersive-g.com">Immersive Garden</a>, former developer at <a target="_blank" href="http://uzik.com">Uzik</a>, teaching classes at <a target="_blank" href="http://hetic.net">HETIC</a> and doing freelance work.
        .skills
            p.b-unveil
                | Some of my skills
            .items
                each item in who.skills
                    - var classes = "item b-unveil " + item.slug
                    span(class=classes)
                        +svg(item.slug)
                        .title= item.title
        .find
            p.b-unveil
                | Find me
            .items
                each item in who.social
                    - var classes = "item b-unveil " + item.slug
                    a(class=classes,href=item.link,target="_blank")
                        +svg(item.slug)
                        .title= item.title
                        if item.slug == 'mail'
                            .title.email
                                | (contact@bruno-simon.com)




