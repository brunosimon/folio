mixin project(data)
    article.project.b-unveil(data-unveiler-steps="100-50")
        .carousel
            .content
                .items
                    each item, index in data.pictures
                        .item
                            .picture
                                picture
                                    source(srcset="src/medias/2x/" + item,media="(-webkit-min-device-pixel-ratio: 1.3),(min-resolution: 124.8dpi)")
                                    img.img(src="src/medias/1x/" + item,width="800",height="380")
                                if (index == 0 )
                                    if (typeof data.logo === 'string')
                                        .logo
                                            .inner
                                                picture
                                                    source(srcset="src/medias/2x/" + data.logo,media="(-webkit-min-device-pixel-ratio: 1.3),(min-resolution: 124.8dpi)")
                                                    img(src="src/medias/1x/" + data.logo)
            if data.pictures.length > 1
                .pagination
                    .items
                        a.item.prev(href="#")
                        each item in data.pictures
                            a.item.page(href="#")
                        a.item.next(href="#")
        - var classes = 'details infos-count-' + data.infos.length
        div(class=classes)
            .background
            .title-group
                .num= data.num
                .title= data.title
            span.separator
            .infos
                each item in data.infos
                    .info
                        .label= item.label
                        if (typeof item.value === 'string')
                            .value
                                | #{item.value}
                        else if (typeof item.value === 'object')
                            each _item in item.value
                                if (typeof _item === 'string')
                                    .value
                                        | #{_item}
                                else
                                    a.value(target="blank",href=_item.link)
                                        | #{_item.title}
                                    br
            if data.link
                a(target="blank",href=data.link).discover.framed
                    | discover

